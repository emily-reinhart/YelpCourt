<%- include ("../partials/header") %>


    <div class="row">
        <h1 style="text-align: center;">Edit <%= court.name %></h1>
        <div class="camp-form">
            <form action="/courts/<%= court._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" value="<%= court.name %>" name="court[name]">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" value="<%= court.description %>" name="court[description]">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" value="<%= court.price %>" name="court[price]" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image url">Image URL</label>
                    <input class="form-control" type="text" value="<%= court.image %>" name="court[image]">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= court.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/courts">Go Back</a>
        </div>
    </div>


<%- include ("../partials/footer") %>
