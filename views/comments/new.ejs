<%- include ("../partials/header") %>

    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= court.name %></h1>
        <div class="camp-form">
            <form action="/courts/<%= court._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/courts">Go Back</a>
        </div>
    </div>

<%- include ("../partials/footer") %>
